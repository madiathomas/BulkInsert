<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Description>Bulk Insert Datatable or generic list into a SQL Server Database table</Description>
    <Copyright>https://licenses.nuget.org/MIT</Copyright>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/madiathomas/Recurso.BulkInsertLibrary</PackageProjectUrl>
    <PackageIcon>recurso 400 x 400.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/madiathomas/Recurso.BulkInsertLibrary</RepositoryUrl>
    <PackageTags>Bulk Insert, Bulk Save, List to Datatable, Datatable</PackageTags>
    <PackageReleaseNotes>- Commented and documented code. Renamed BulkInsert class to SQLServerBulkInsert
- Breaking changes: BulkInsert class renamed to a more specific SQLServerBulkInsert
- Sample app updated</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Version>2.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.8.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="recurso 400 x 400.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
